{% extends 'base.html' %}

{% block header %}üöÄ Space Maze Navigator üöÄ{% endblock %}

{% block head %}
<style>
    .maze-intro-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        text-align: center;
    }
    
    .space-panel {
        background: linear-gradient(135deg, 
            rgba(20, 20, 50, 0.9) 0%, 
            rgba(40, 40, 80, 0.8) 50%, 
            rgba(60, 20, 80, 0.7) 100%);
        border: 2px solid rgba(0, 255, 255, 0.3);
        border-radius: 20px;
        padding: 3rem;
        margin: 2rem 0;
        box-shadow: 
            0 0 30px rgba(0, 255, 255, 0.2),
            inset 0 0 20px rgba(255, 255, 255, 0.05);
        position: relative;
        overflow: hidden;
    }
    
    .space-panel::before {
        content: '';
        position: absolute;
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        background: linear-gradient(45deg, 
            transparent, rgba(0, 255, 255, 0.5), transparent, 
            rgba(255, 0, 255, 0.5), transparent);
        background-size: 400% 400%;
        animation: borderGlow 4s ease-in-out infinite;
        z-index: -1;
        border-radius: 20px;
    }
    
    @keyframes borderGlow {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }
    
    .maze-description {
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        color: rgba(255, 255, 255, 0.9);
    }
    
    .difficulty-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin: 3rem 0;
    }
    
    .difficulty-card {
        background: linear-gradient(135deg, 
            rgba(0, 0, 30, 0.8) 0%, 
            rgba(30, 0, 60, 0.6) 100%);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        padding: 2rem;
        transition: all 0.3s ease;
        position: relative;
        cursor: pointer;
    }
    
    .difficulty-card:hover {
        transform: translateY(-10px);
        border-color: rgba(0, 255, 255, 0.6);
        box-shadow: 
            0 15px 40px rgba(0, 0, 0, 0.4),
            0 0 25px rgba(0, 255, 255, 0.3);
    }
    
    .difficulty-card.easy {
        border-color: rgba(0, 255, 0, 0.4);
    }
    
    .difficulty-card.easy:hover {
        border-color: rgba(0, 255, 0, 0.8);
        box-shadow: 
            0 15px 40px rgba(0, 0, 0, 0.4),
            0 0 25px rgba(0, 255, 0, 0.4);
    }
    
    .difficulty-card.medium {
        border-color: rgba(255, 255, 0, 0.4);
    }
    
    .difficulty-card.medium:hover {
        border-color: rgba(255, 255, 0, 0.8);
        box-shadow: 
            0 15px 40px rgba(0, 0, 0, 0.4),
            0 0 25px rgba(255, 255, 0, 0.4);
    }
    
    .difficulty-card.hard {
        border-color: rgba(255, 0, 0, 0.4);
    }
    
    .difficulty-card.hard:hover {
        border-color: rgba(255, 0, 0, 0.8);
        box-shadow: 
            0 15px 40px rgba(0, 0, 0, 0.4),
            0 0 25px rgba(255, 0, 0, 0.4);
    }
    
    .difficulty-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        display: block;
    }
    
    .difficulty-title {
        font-size: 1.5rem;
        font-weight: 300;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }
    
    .difficulty-stats {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
        line-height: 1.4;
    }
    
    .start-btn {
        background: linear-gradient(135deg, 
            rgba(0, 255, 255, 0.8), 
            rgba(0, 150, 255, 0.8));
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.3);
        padding: 1rem 2rem;
        border-radius: 50px;
        font-size: 1.1rem;
        font-family: 'Times New Roman', Times, serif;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 2rem;
        display: inline-block;
        text-decoration: none;
        position: relative;
        overflow: hidden;
    }
    
    .start-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, 
            transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }
    
    .start-btn:hover {
        transform: translateY(-3px);
        box-shadow: 
            0 10px 30px rgba(0, 255, 255, 0.4),
            inset 0 0 20px rgba(255, 255, 255, 0.1);
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
    }
    
    .start-btn:hover::before {
        left: 100%;
    }
    
    .controls-info {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        padding: 1.5rem;
        margin-top: 2rem;
        text-align: left;
    }
    
    .controls-title {
        font-size: 1.2rem;
        margin-bottom: 1rem;
        text-align: center;
        color: rgba(0, 255, 255, 1);
    }
    
    .controls-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        font-size: 0.9rem;
    }
    
    .control-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .control-key {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 5px;
        padding: 0.3rem 0.6rem;
        font-family: monospace;
        min-width: 30px;
        text-align: center;
    }
    
    @media (max-width: 768px) {
        .difficulty-grid {
            grid-template-columns: 1fr;
        }
        
        .controls-grid {
            grid-template-columns: 1fr;
        }
        
        .maze-intro-container {
            padding: 1rem;
        }
    }
</style>
{% endblock %}

