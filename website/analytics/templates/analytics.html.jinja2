<!-- ===== FILE: website/templates/analytics.html ===== -->
{% extends 'base.html' %}

{% block title %}Game Analytics - SUMMERLOCKIN{% endblock %}
{% block header %}üöÄ Game Analytics Dashboard{% endblock %}

{% block head %}
<style>
    .analytics-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }
    
    .stats-overview {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin: 30px 0;
    }
    
    .stat-card {
        background: rgba(255,255,255,0.15);
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.2);
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    }
    
    .stat-number {
        font-size: 2.8rem;
        font-weight: bold;
        color: #FFD700;
        text-shadow: 0 0 20px rgba(255,215,0,0.5);
        margin-bottom: 10px;
    }
    
    .stat-label {
        font-size: 1.1rem;
        opacity: 0.9;
    }
    
    .games-table {
        background: rgba(255,255,255,0.1);
        border-radius: 20px;
        overflow: hidden;
        margin: 30px 0;
        backdrop-filter: blur(15px);
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    }
    
    .table-header {
        background: rgba(255,255,255,0.2);
        padding: 25px;
        text-align: center;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    
    .games-table table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .games-table th,
    .games-table td {
        padding: 18px;
        text-align: left;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    
    .games-table th {
        background: rgba(255,255,255,0.1);
        font-weight: bold;
        font-size: 1.1rem;
    }
    
    .rank {
        font-weight: bold;
        color: #FFD700;
        font-size: 1.3rem;
        text-shadow: 0 0 10px rgba(255,215,0,0.5);
    }
    
    .game-name {
        font-weight: 600;
        font-size: 1.1rem;
    }
    
    .sessions {
        color: #4CAF50;
        font-weight: bold;
    }
    
    .percentage {
        color: #FF9800;
        font-style: italic;
    }
    
    .progress-bar {
        background: rgba(255,255,255,0.2);
        border-radius: 10px;
        height: 8px;
        margin-top: 8px;
        overflow: hidden;
    }
    
    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #FFD700, #FFA500);
        border-radius: 10px;
        transition: width 0.3s ease;
    }
    
    .action-buttons {
        text-align: center;
        margin-top: 50px;
    }
    
    .btn {
        color: white;
        padding: 18px 35px;
        text-decoration: none;
        border-radius: 30px;
        font-weight: bold;
        font-size: 1.1rem;
        display: inline-block;
        margin: 10px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.3);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #FF6B6B, #FF8E53);
    }
    
    .btn-secondary {
        background: linear-gradient(135deg, #4CAF50, #45a049);
    }
    
    .top-3-highlight {
        background: rgba(255,215,0,0.1);
    }
    
    .footer-info {
        margin-top: 30px;
        opacity: 0.7;
        text-align: center;
    }
    
    .footer-info p {
        margin: 5px 0;
    }
</style>
{% endblock %}

{% block body %}
<div class="analytics-container">
    <!-- Overview Stats -->
    <div class="stats-overview">
        <div class="stat-card">
            <div class="stat-number">{{ total_sessions | default(0) | comma }}</div>
            <div class="stat-label">Total Unique Sessions</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">{{ total_games | default(0) }}</div>
            <div class="stat-label">Games Available</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">{{ avg_sessions | default(0) }}</div>
            <div class="stat-label">Avg Sessions per Game</div>
        </div>
    </div>
    
    <!-- Games Table -->
    <div class="games-table">
        <div class="table-header">
            <h2 style="margin: 0; font-size: 2rem;">üèÜ Game Popularity Rankings</h2>
            <p style="margin: 10px 0 0 0; opacity: 0.8;">Ranked by unique browser sessions</p>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Rank</th>
                    <th>Game Name</th>
                    <th>Sessions</th>
                    <th>% of Total</th>
                    <th>Popularity</th>
                    <th>Last Played</th>
                </tr>
            </thead>
            <tbody>
                {% for game in games %}
                <tr {% if loop.index <= 3 %}class="top-3-highlight"{% endif %}>
                    <td class="rank">#{{ loop.index }}</td>
                    <td class="game-name">
                        {% if loop.index == 1 %}ü•á {% elif loop.index == 2 %}ü•à {% elif loop.index == 3 %}ü•â {% endif %}
                        {{ game.name }}
                    </td>
                    <td class="sessions">{{ game.sessions | comma }}</td>
                    <td class="percentage">{{ game.percentage }}%</td>
                    <td style="width: 150px;">
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: {{ game.progress_width }}%;"></div>
                        </div>
                    </td>
                    <td>{{ game.last_played }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    <!-- Action Buttons -->
    <div class="action-buttons">
        <a href="{{ url_for('home.index') }}" class="btn btn-primary">üéÆ Back to Games</a>
        <a href="{{ url_for('api_game_stats') }}" class="btn btn-secondary">üìä JSON Data</a>
    </div>
    
    <!-- Footer Info -->
    <div class="footer-info">
        <p>Analytics track unique browser sessions per game</p>
        <p>Data updates in real-time as users play games</p>
        <p>Last updated: {{ current_time }}</p>
    </div>
</div>
{% endblock %}

